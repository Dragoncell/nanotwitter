<% redirect'/warnnonlogin' if session[:user_id].nil? %>

<div class="container theme-showcase" role="main">
    <h1>Notifications</h1>
    
    <%= control_bar session[:username] %>

    <div class="list-group container theme-showcase">
        <li class="list-group-item">
            <a href="#">All</a>
            <a href="#">Mentions</a>
            <a href="#" style="float:right">Settings</a>
        </li>
        <% @n+=1 if @n<0 %>
        <% for i in (0+@n*20)..(19+@n*20) %>
          <% if @responseArray[i] == nil %>
            <% break %>
          <% end %>
            <% @notification = @responseArray[i] %>
            <% @i=i %>
            <%= erb :singleNotification %>
          <% end %>

        <nav aria-label="Page navigation">
          <ul class="pagination">
            <li>
              <a href="/notification?n=<%= @n-1 %>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li><a href="/notification?n=0">1</a></li>
            <li><a href="/notification?n=1">2</a></li>
            <li><a href="/notification?n=2">3</a></li>
            <li><a href="/notification?n=3">4</a></li>
            <li><a href="/notification?n=4">5</a></li>
            <li>
              <a href="/notification?n=<%= @n+1 %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>

    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <img src="http://data.bbs.manmankan.com/forum/201401/06/200928nlh3ovhnnzcc3cco.gif" alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h2>
                            <%= @users[@i][:username]%> </h2>
                        <h4>
                            @<%= @users[@i][:nickname]%>  </h4>
                        <p>
                            <i class="glyphicon glyphicon-globe"></i>Description: <%= @users[@i][:description]%>
                            <br />

                            <i class="glyphicon glyphicon-gift"></i>Birthday: <%= @users[@i][:birthday]%></p>

                          <% x="location='../#{@users[@i][:username]}/tweets'"%>
                          <a class="btn btn-primary status" role="button" id="<%= @users[@i][:id] %>"><%= @status%></a>

                          <button class="btn btn-primary" type="submit" onclick=<%= x %>>Showhome</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
